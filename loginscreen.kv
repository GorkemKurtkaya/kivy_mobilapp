#: import utils kivy.utils


<LoginScreen>:
    GridLayout:

        cols: 1
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#34b7eb")
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint: 1,.5
            padding: 10
            Image:
                source: "images/mind.png"

        GridLayout:
            padding: 15,15
            spacing: 20,20
            cols: 1
            Label:

                text: "English Puzzle"
                font_size: "20sp"

            TextInput:
                id: username_login
                hint_text: "Username"

            
            TextInput:
                id: password_login
                hint_text: "Password"
                password: True
                

            Button:


                text: "Login"
                on_press: root.login(root.ids.username_login.text, root.ids.password_login.text)

            Label:
                id: wrong
                text: ""

        GridLayout:
            cols: 2
            size_hint: 1, 0.1
            padding: 1,1
            spacing: 10,0
            Button:

                text: "Forgot Password"
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else .5

            Button:

                text: "Sign Up"
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else .5
                on_press: root.sign_up()


<SignUpScreen>:
    GridLayout:
        cols: 1
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#34b7eb")
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            size_hint: 1,.5
            padding: 20,20
            Image:
                source: "images/mind.png"

        GridLayout:
            cols: 1
            padding: 15,15
            spacing: 20,20
            Label:
                text: "Sign Up Screen"
                font_size: "20sp"
            
            Label:
                text: ""

            TextInput:
                id: username
                hint_text: "Username"

            TextInput:
                id: password
                hint_text: "Password"
                password: True

            Label:
                text: ""


            Button:
                text: "Sign Up"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)


<SignUpSuccessScreen>:
    GridLayout:
        cols: 1
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#34b7eb")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols: 1
            padding: 20,20
            Label:
                text: "Sign Up Successful!"

            Button:
                size_hint: 1,.1
                text: "Login Page"
                on_press: root.go_to_login_page()

